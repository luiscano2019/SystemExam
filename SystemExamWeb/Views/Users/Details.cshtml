@model SystemExamWeb.Models.User

<h2>Detalles de Usuario</h2>
<dl class="row">
    <dt class="col-sm-2">Email</dt>
    <dd class="col-sm-10">@Model.Email</dd>
    <dt class="col-sm-2">Nombre</dt>
    <dd class="col-sm-10">@Model.Name</dd>
    <dt class="col-sm-2">Apellido</dt>
    <dd class="col-sm-10">@Model.LastName</dd>
    <dt class="col-sm-2">DNI</dt>
    <dd class="col-sm-10">@Model.Dni</dd>
    <dt class="col-sm-2">Teléfono</dt>
    <dd class="col-sm-10">@Model.Phone</dd>
    <dt class="col-sm-2">Dirección</dt>
    <dd class="col-sm-10">@Model.Address</dd>
    <dt class="col-sm-2">Rol</dt>
    <dd class="col-sm-10">@Model.UserRole.ToString()</dd>
    <dt class="col-sm-2">Activo</dt>
    <dd class="col-sm-10">@(Model.IsActive ? "Sí" : "No")</dd>
    <dt class="col-sm-2">Fecha de inicio</dt>
    <dd class="col-sm-10">@Model.StartDate?.ToString("dd/MM/yyyy")</dd>
    <dt class="col-sm-2">Fecha de fin</dt>
    <dd class="col-sm-10">@Model.EndDate?.ToString("dd/MM/yyyy")</dd>
    <dt class="col-sm-2">Último acceso</dt>
    <dd class="col-sm-10">@Model.LastLogin?.ToString("g")</dd>
    <dt class="col-sm-2">Creado</dt>
    <dd class="col-sm-10">@Model.CreatedAt.ToString("g")</dd>
    <dt class="col-sm-2">Actualizado</dt>
    <dd class="col-sm-10">@Model.UpdatedAt.ToString("g")</dd>
</dl>
<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Editar</a>
<a asp-action="Index" class="btn btn-secondary">Volver</a> 