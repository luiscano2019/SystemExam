@model SystemExamWeb.Models.ViewModels.UserViewModel

<div class="row gy-4">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Nuevo Usuario</h5>
            </div>
            <div class="card-body">

                <form class="row gy-3 needs-validation" asp-action="Create">

                    <div class="col-md-6">
                        <label class="form-label">Email</label>
                        <input asp-for="Email" type="text" class="form-control" required>

                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Password</label>
                        <input asp-for="Password" class="form-control" type="text" required>

                    </div>

                    <div class="col-md-6">
                        <label class="form-label">Name</label>
                        <input asp-for="Name" type="text" class="form-control" required>

                    </div>
                    <div class="col-md-6">
                        <label class="form-label">LastName</label>
                        <input asp-for="LastName" class="form-control" type="text" required>

                    </div>

                    <div class="col-md-6">
                        <label class="form-label">Dni</label>
                        <input asp-for="Dni" type="text" class="form-control" required>

                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Phone</label>
                        <input asp-for="Phone" class="form-control" type="text" required>

                    </div>

                    <div class="col-md-6">
                        <label class="form-label">Address</label>
                        <input asp-for="Address" type="text" class="form-control" required>

                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Rol</label>
                        <select asp-for="UserRole" class="form-control" asp-items="Html.GetEnumSelectList<SystemExamWeb.Models.UserRoleEnum>()"></select>

                    </div>



                    <div class="col-md-6">
                        <div class="form-switch switch-primary d-flex align-items-center gap-3">
                            <label class="form-check-label line-height-1 fw-medium text-secondary-light" for="switch1">
                                Estado
                            </label>

                            @Html.CheckBoxFor(m => m.IsActive, new {
                            @class = "form-check-input",  @role = "switch",  id = "switch1" })

                        </div>

                    </div>
                    <div class="col-md-6">
                        <label class="form-label">StartDate</label>
                        <input asp-for="StartDate" type="date" class="form-control" required>

                    </div>
                    <div class="col-md-6">
                        <label class="form-label">EndDate</label>
                        <input asp-for="EndDate" type="date" class="form-control" required>

                    </div>


                    <button type="submit" class="btn btn-primary">Crear</button>
                    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                </form>
                @Html.ValidationSummary(false, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
</div>
